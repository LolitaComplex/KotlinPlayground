<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassLoaderKtActivity">

    <Button
        android:id="@+id/mBtnAddMemory1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加100M内存1"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/mBtnAddMemory2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加100M内存2"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/mBtnAddMemory1"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/mBtnAddMemory3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加100M内存3"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/mBtnAddMemory2"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/mBtnAddMemory4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加100M内存4"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/mBtnAddMemory3"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"/>


    <Button
        android:id="@+id/mBtnClassloader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ClassLoader学习"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/mBtnAddMemory4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/mBtnProxy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proxy学习"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mBtnClassloader"
        android:layout_marginTop="8dp"
    />

</androidx.constraintlayout.ConstraintLayout>